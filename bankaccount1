
package account;

//This is the Public Account
public class Account 
{
    //This is the Private Account Specification 1
    private int balance;

    //Account takes in the Balance and sets it to a parameter Specification 2
    public Account(int cash)
    {
        balance = cash;
    }
    
    //These are the three functions for Specification 3
    
    //Credit adds an amount to the current Balance
    public void credit(int credit)
    {
        balance = balance+credit;
    }
    
    //Debit withdraws and ammount for the current Balance
    public void debit(int debit)
    {
        balance = balance-debit;      
    }
    
    public int getBalance()
    { 
      return balance;  
}

}
